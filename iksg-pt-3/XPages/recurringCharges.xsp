<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xe="http://www.ibm.com/xsp/coreex" xmlns:xc="http://www.ibm.com/xsp/custom" beforePageLoad="#{controller.beforePageLoad}"
	afterPageLoad="#{controller.afterPageLoad}">

	<xp:this.acl>
		<xp:acl>
			<xp:this.entries>
				<xp:aclEntry type="ROLE" right="READER" name="[Client]"/>
				<xp:aclEntry type="ROLE" right="EDITOR" name="[Staff]"/>
			</xp:this.entries>
		</xp:acl>
	</xp:this.acl>
	
	<xc:layout navigationPath="/RecurringCharges/All" pageTitle="Recurring Charges">
		<xp:this.facets>
			<xc:actionBar xp:key="ActionBar" loaded="${not view.readonly}">
				<xc:button_newRecurringCharge refreshId="viewContainer"/>
			</xc:actionBar>
			<xe:breadCrumbs xp:key="BreadCrumbs">
				<xe:this.treeNodes>
					<xe:basicLeafNode href="/" imageAlt="icon-home home-icon" label="Home"/>
					<xe:basicLeafNode label="Recurring Charges"/>
				</xe:this.treeNodes>
			</xe:breadCrumbs>
		</xp:this.facets>

		<xp:div id="viewContainer">
			<xc:list_recurringCharges value="#{userInfo.staff or userInfo.admin ? RecurringCharges['By Frequency'] : RecurringCharges.mine}" showLink="${userInfo.staff or userInfo.admin}"/>
		</xp:div>
	</xc:layout>
</xp:view>
